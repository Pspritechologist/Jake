	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug Hyde Serve",
			"cargo": {
				"args": [
					"build",
					"--bin=hyde",
					"--package=hyde",
				],
				"filter": {
					"name": "hyde",
					"kind": "bin"
				}
			},
			"args": [
				// "--",
				"build",
			],
			"cwd": "${workspaceFolder}",
			"env": {
				"HYDE_DIR": "${workspaceFolder}/testing/"
			}
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug Hyde Build",
			"cargo": {
				"args": [
					"build",
					"--bin=hyde",
					"--package=hyde",
					"--",
					"serve",
				],
				"filter": {
					"name": "hyde",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}",
			"env": {
				"HYDE_DIR": "${workspaceFolder}/testing/"
			}
		},
	]
}